    <button id="fullscreenBtn" class="fullscreen-btn hidden" onclick="toggleFullscreen()">‚õ∂ Fullskjerm</button>
    <button id="disconnectBtn" class="btn-disconnect hidden" onclick="disconnect()">Koble fra</button>

    <script>
        // State
        let state = {
            totalSeconds: 300,
            remainingSeconds: 300,
            isRunning: false,
            isPaused: false,
            message: 'Takk!',
            lastUpdate: Date.now(),
            serverTimeOffset: 0
        };

        let localMode = 'technician';
        let db = null;
        let roomRef = null;
        let localTimerInterval = null;

        // Lagre config i localStorage
        function saveConfig() {
            const config = {
                apiKey: document.getElementById('apiKey').value,
                projectId: document.getElementById('projectId').value,
                databaseURL: document.getElementById('databaseURL').value,
                roomCode: document.getElementById('roomCode').value
            };
            localStorage.setItem('countdownConfig', JSON.stringify(config));
        }

        // Last config fra localStorage
        function loadConfig() {
            const saved = localStorage.getItem('countdownConfig');
            if (saved) {
                const config = JSON.parse(saved);
                document.getElementById('apiKey').value = config.apiKey || '';
                document.getElementById('projectId').value = config.projectId || '';
                document.getElementById('databaseURL').value = config.databaseURL || '';
                document.getElementById('roomCode').value = config.roomCode || 'sal1';
            }
        }

        // Koble til Firebase
        async function connect() {
            const apiKey = document.getElementById('apiKey').value.trim();
            const projectId = document.getElementById('projectId').value.trim();
            let databaseURL = document.getElementById('databaseURL').value.trim();
            const roomCode = document.getElementById('roomCode').value.trim().toLowerCase();

            if (!apiKey || !projectId) {
                showError('Fyll inn API Key og Project ID');
                return;
            }

            if (!roomCode) {
                showError('Fyll inn en rom-kode');
                return;
            }

            // Auto-generere database URL hvis ikke oppgitt
            if (!databaseURL) {
                databaseURL = `https://${projectId}-default-rtdb.europe-west1.firebasedatabase.app`;
            }

            try {
                // Initialiser Firebase
                const firebaseConfig = {
                    apiKey: apiKey,
                    projectId: projectId,
                    databaseURL: databaseURL
                };

                if (!firebase.apps.length) {
                    firebase.initializeApp(firebaseConfig);
                }

                db = firebase.database();
                
                // Synkroniser servertid
                const offsetRef = db.ref('.info/serverTimeOffset');
                offsetRef.on('value', (snap) => {
                    state.serverTimeOffset = snap.val() || 0;
                });

                // Koble til rom
                roomRef = db.ref(`countdown-rooms/${roomCode}`);

                // Lytt til endringer
                roomRef.on('value', (snapshot) => {
                    const data = snapshot.val();
                    if (data) {
                        const oldRunning = state.isRunning;
                        state = { ...state, ...data };
                        
                        // Beregn faktisk gjenv√¶rende tid basert p√• serverens tidsstempel
                        if (state.isRunning && !state.isPaused && data.lastUpdate) {
                            const serverNow = Date.now() + state.serverTimeOffset;
                            const elapsed = Math.floor((serverNow - data.lastUpdate) / 1000);
                            state.remainingSeconds = data.remainingSeconds - elapsed;
                        }
                        
                        updateDisplay();
                        
                        // Oppdater meldings-input hvis vi er i tekniker-modus
                        if (localMode === 'technician' && data.message) {
                            document.getElementById('messageInput').value = data.message;
                        }
                    }
                    updateConnectionStatus(true);
                });

                // H√•ndter frakobling
                roomRef.onDisconnect().cancel();

                saveConfig();
                showMainInterface(roomCode);

            } catch (error) {
                console.error('Firebase error:', error);
                showError(`Kunne ikke koble til: ${error.message}`);
            }
        }

        function showError(message) {
            const errorEl = document.getElementById('configError');
            errorEl.textContent = message;
            errorEl.classList.remove('hidden');
        }

        function showMainInterface(roomCode) {
            document.getElementById('configPanel').classList.add('hidden');
            document.getElementById('modeSelector').classList.remove('hidden');
            document.getElementById('technicianPanel').classList.remove('hidden');
            document.getElementById('disconnectBtn').classList.remove('hidden');
            document.getElementById('roomBadge').textContent = `Rom: ${roomCode}`;
            document.body.className = 'technician-mode';
            
            startLocalTimer();
        }

        function disconnect() {
            if (roomRef) {
                roomRef.off();
            }
            if (localTimerInterval) {
                clearInterval(localTimerInterval);
            }
            
            document.getElementById('configPanel').classList.remove('hidden');
            document.getElementById('modeSelector').classList.add('hidden');
            document.getElementById('technicianPanel').classList.add('hidden');
            document.getElementById('displayPanel').classList.add('hidden');
            document.getElementById('fullscreenBtn').classList.add('hidden');
            document.getElementById('disconnectBtn').classList.add('hidden');
            document.getElementById('configError').classList.add('hidden');
        }

        function updateConnectionStatus(connected) {
            const dot = document.getElementById('statusDot');
            const text = document.getElementById('connectionText');
            
            if (connected) {
                dot.classList.add('connected');
                text.textContent = 'Tilkoblet';
            } else {
                dot.classList.remove('connected');
                text.textContent = 'Frakoblet';
            }
        }

        // Lokal timer for jevn visning
        function startLocalTimer() {
            if (localTimerInterval) clearInterval(localTimerInterval);
            
            localTimerInterval = setInterval(() => {
                if (state.isRunning && !state.isPaused) {
                    // Beregn basert p√• servertid
                    const serverNow = Date.now() + state.serverTimeOffset;
                    const elapsed = Math.floor((serverNow - state.lastUpdate) / 1000);
                    const calculatedRemaining = state.remainingSeconds - elapsed + Math.floor((serverNow - state.lastUpdate) / 1000);
                    
                    // Bare oppdater lokalt for jevn visning
                    state.remainingSeconds--;
                    updateDisplay();
                }
            }, 1000);
        }

        // Synkroniser til Firebase
        function syncToFirebase() {
            if (!roomRef) return;
            
            const serverNow = Date.now() + state.serverTimeOffset;
            
            roomRef.set({
                totalSeconds: state.totalSeconds,
                remainingSeconds: state.remainingSeconds,
                isRunning: state.isRunning,
                isPaused: state.isPaused,
                message: state.message,
                lastUpdate: serverNow
            });
        }

        // Formater sekunder til MM:SS
        function formatTime(seconds) {
            const mins = Math.floor(Math.abs(seconds) / 60);
            const secs = Math.abs(seconds) % 60;
            const sign = seconds < 0 ? '-' : '';
            return `${sign}${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // Parse MM:SS til sekunder
        function parseTime(timeStr) {
            const parts = timeStr.split(':');
            if (parts.length === 2) {
                return parseInt(parts[0]) * 60 + parseInt(parts[1]);
            } else if (parts.length === 1) {
                return parseInt(parts[0]) * 60;
            }
            return 0;
        }

        // Oppdater alle visuelle elementer
        function updateDisplay() {
            const timeStr = formatTime(state.remainingSeconds);
            
            // Tekniker-visning
            document.getElementById('timeDisplaySmall').textContent = timeStr;
            
            // Display-visning
            document.getElementById('timeDisplayLarge').textContent = timeStr;

            // Status
            const statusEl = document.getElementById('statusIndicator');
            const displayStatusEl = document.getElementById('displayStatus');
            const displayMessageEl = document.getElementById('displayMessage');
            const body = document.body;

            // Fjern status-klasser fra body
            body.classList.remove('warning', 'danger', 'finished');

            if (state.remainingSeconds <= 0) {
                statusEl.textContent = 'Ferdig!';
                statusEl.className = 'status-indicator status-finished';
                displayStatusEl.textContent = '';
                displayMessageEl.textContent = state.message;
                displayMessageEl.classList.remove('hidden');
                if (localMode === 'display') {
                    body.classList.add('finished');
                }
            } else if (state.isRunning && !state.isPaused) {
                statusEl.textContent = 'Kj√∏rer';
                statusEl.className = 'status-indicator status-running';
                displayStatusEl.textContent = '';
                displayMessageEl.classList.add('hidden');
                
                if (localMode === 'display') {
                    if (state.remainingSeconds <= 30) {
                        body.classList.add('danger');
                    } else if (state.remainingSeconds <= 60) {
                        body.classList.add('warning');
                    }
                }
            } else if (state.isPaused) {
                statusEl.textContent = 'Pauset';
                statusEl.className = 'status-indicator status-paused';
                displayStatusEl.textContent = 'PAUSE';
                displayMessageEl.classList.add('hidden');
            } else {
                statusEl.textContent = 'Stoppet';
                statusEl.className = 'status-indicator status-stopped';
                displayStatusEl.textContent = '';
                displayMessageEl.classList.add('hidden');
            }

            // Farge p√• tid i tekniker-panel
            const timeSmall = document.getElementById('timeDisplaySmall');
            if (state.remainingSeconds <= 0) {
                timeSmall.style.color = '#ef4444';
            } else if (state.remainingSeconds <= 30) {
                timeSmall.style.color = '#ef4444';
            } else if (state.remainingSeconds <= 60) {
                timeSmall.style.color = '#eab308';
            } else {
                timeSmall.style.color = '#22c55e';
            }
        }

        // Timer-funksjoner
        function startTimer() {
            if (state.remainingSeconds <= 0) {
                state.remainingSeconds = state.totalSeconds;
            }
            state.isRunning = true;
            state.isPaused = false;
            state.lastUpdate = Date.now() + state.serverTimeOffset;
            
            updateDisplay();
            syncToFirebase();
        }

        function pauseTimer() {
            state.isPaused = !state.isPaused;
            state.lastUpdate = Date.now() + state.serverTimeOffset;
            updateDisplay();
            syncToFirebase();
        }

        function stopTimer() {
            state.isRunning = false;
            state.isPaused = false;
            updateDisplay();
            syncToFirebase();
        }

        function resetTimer() {
            state.isRunning = false;
            state.isPaused = false;
            state.remainingSeconds = state.totalSeconds;
            updateDisplay();
            syncToFirebase();
        }

        function setPreset(minutes) {
            state.totalSeconds = minutes * 60;
            state.remainingSeconds = state.totalSeconds;
            state.isRunning = false;
            state.isPaused = false;
            document.getElementById('timeInput').value = `${minutes}:00`;
            updateDisplay();
            syncToFirebase();
        }

        function setCustomTime() {
            const input = document.getElementById('timeInput').value;
            const seconds = parseTime(input);
            if (seconds > 0) {
                state.totalSeconds = seconds;
                state.remainingSeconds = seconds;
                state.isRunning = false;
                state.isPaused = false;
                updateDisplay();
                syncToFirebase();
            }
        }

        function adjustTime(seconds) {
            state.remainingSeconds = Math.max(0, state.remainingSeconds + seconds);
            if (!state.isRunning) {
                state.totalSeconds = state.remainingSeconds;
            }
            state.lastUpdate = Date.now() + state.serverTimeOffset;
            updateDisplay();
            syncToFirebase();
        }

        function updateMessage() {
            state.message = document.getElementById('messageInput').value || 'Takk!';
            syncToFirebase();
        }

        // Mode switching
        function setMode(mode) {
            localMode = mode;
            const body = document.body;
            const techPanel = document.getElementById('technicianPanel');
            const dispPanel = document.getElementById('displayPanel');
            const btnTech = document.getElementById('btnTechnician');
            const btnDisp = document.getElementById('btnDisplay');
            const fullscreenBtn = document.getElementById('fullscreenBtn');
            const disconnectBtn = document.getElementById('disconnectBtn');

            if (mode === 'technician') {
                body.className = 'technician-mode';
                techPanel.classList.remove('hidden');
                dispPanel.classList.add('hidden');
                btnTech.classList.add('active');
                btnDisp.classList.remove('active');
                fullscreenBtn.classList.add('hidden');
                disconnectBtn.classList.remove('hidden');
            } else {
                body.className = 'display-mode';
                techPanel.classList.add('hidden');
                dispPanel.classList.remove('hidden');
                btnTech.classList.remove('active');
                btnDisp.classList.add('active');
                fullscreenBtn.classList.remove('hidden');
                disconnectBtn.classList.add('hidden');
            }
            updateDisplay();
        }

        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
                document.querySelector('.mode-selector').style.display = 'none';
            } else {
                document.exitFullscreen();
                document.querySelector('.mode-selector').style.display = 'flex';
            }
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.target.tagName === 'INPUT') return;
            
            switch(e.key) {
                case ' ':
                    e.preventDefault();
                    if (state.isRunning && !state.isPaused) {
                        pauseTimer();
                    } else if (state.isPaused) {
                        pauseTimer();
                    } else {
                        startTimer();
                    }
                    break;
                case 'Escape':
                    if (document.fullscreenElement) {
                        document.exitFullscreen();
                    } else {
                        stopTimer();
                    }
                    break;
                case 'r':
                    resetTimer();
                    break;
                case 'f':
                    if (localMode === 'display') {
                        toggleFullscreen();
                    }
                    break;
                case 'd':
                    setMode('display');
                    break;
                case 't':
                    setMode('technician');
                    break;
            }
        });

        // Fullscreen change handler
        document.addEventListener('fullscreenchange', () => {
            if (!document.fullscreenElement) {
                document.querySelector('.mode-selector').style.display = 'flex';
            }
        });

        // Last config ved oppstart
        loadConfig();
        updateDisplay();
    </script>
</body>
</html>
